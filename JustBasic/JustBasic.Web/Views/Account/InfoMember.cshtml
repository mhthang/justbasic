@model JustBasic.Model.Models.ApplicationUser
@{
    ViewBag.Title = "Thông tin tài khoản";
    Layout = "~/Views/Shared/Layouts.cshtml";
}
<style>
    h3.title {
        padding: 10px;
        margin: 0px;
        background: #dddddd;
        color: #f7a82f;
    }
</style>
<div class="row">
    <div class="col-md-3">
        @Html.Partial("_MenuMember")
    </div>
    <div class="col-md-9">
        <h3 class="title">Thông tin tài khoản</h3>
        <div>
            <table class="table">
                <tr>
                    <td style="width: 150px;">Tên đăng nhập</td>
                    <td>
                        @Model.UserName
                    </td>
                </tr>
                <tr>
                    <td>Mật khẩu</td>
                    <td>
                        ****** <a href="/thay-doi-mat-khau.html" id="btnChangePass" style="color:blue;"> Đổi mật khẩu</a>
                    </td>
                </tr>
                <tr>
                    <td>Họ tên</td>
                    <td>
                        @Model.FullName
                    </td>
                </tr>
                <tr>
                    <td>Số điện thoại</td>
                    <td>
                        @Model.PhoneNumber
                    </td>
                </tr>
                <tr>
                    <td>Địa chỉ</td>
                    <td>
                        @Model.Address
                    </td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>
                        @Model.Email
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>

@section footerJS{
    <script>
        $(document).ready(function () {
            
        });
    </script>
}